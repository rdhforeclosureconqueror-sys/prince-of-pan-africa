<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Mufasa ‚Ä¢ Yoruba Lesson of the Day</title>

  <style>
    :root{
      --bg:#070707;
      --panel: rgba(10,10,10,.72);
      --gold:#d6b25e;
      --gold2:#f0d489;
      --red:#e11d2e;
      --green:#10b981;
      --text:#f4f1e8;
      --muted:#c9c2b3;
      --shadow: 0 20px 60px rgba(0,0,0,.55);
      --radius: 18px;
    }

    *{box-sizing:border-box}
    body{
      margin:0;
      font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
      background:
        radial-gradient(1100px 500px at 50% 0%, rgba(214,178,94,.14), transparent 65%),
        radial-gradient(900px 420px at 20% 20%, rgba(225,29,46,.12), transparent 65%),
        radial-gradient(900px 420px at 80% 25%, rgba(16,185,129,.10), transparent 65%),
        linear-gradient(180deg, #0a0a0a, #040404);
      color: var(--text);
      min-height:100vh;
    }

    .topbar{
      position:sticky; top:0; z-index:50;
      backdrop-filter: blur(10px);
      background: linear-gradient(180deg, rgba(0,0,0,.78), rgba(0,0,0,.35));
      border-bottom: 1px solid rgba(214,178,94,.18);
    }
    .topbar-inner{
      max-width:1100px; margin:0 auto; padding:14px 18px;
      display:flex; align-items:center; justify-content:space-between; gap:12px;
    }

    .brand{ display:flex; align-items:center; gap:12px; min-width: 0; }
    .mark{
      width:42px; height:42px; border-radius: 12px;
      background: linear-gradient(135deg, rgba(214,178,94,.35), rgba(214,178,94,.06));
      border: 1px solid rgba(214,178,94,.45);
      box-shadow: 0 10px 28px rgba(214,178,94,.10);
      display:grid; place-items:center;
      position:relative;
    }
    .mark:before{
      content:""; position:absolute; inset:6px; border-radius: 10px;
      border: 1px solid rgba(214,178,94,.28);
    }
    .mark span{
      font-weight:900; letter-spacing:.5px;
      background: linear-gradient(180deg, var(--gold2), var(--gold));
      -webkit-background-clip:text; background-clip:text;
      color: transparent;
      text-shadow: 0 1px 0 rgba(0,0,0,.35);
    }

    .brand h1{
      margin:0; font-size:14px; letter-spacing:.16em; text-transform:uppercase;
      white-space:nowrap; overflow:hidden; text-overflow:ellipsis;
      background: linear-gradient(180deg, var(--gold2), var(--gold));
      -webkit-background-clip:text; background-clip:text; color:transparent;
    }
    .brand p{ margin:2px 0 0; color: var(--muted); font-size:12px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis; }

    .nav{ display:flex; gap:10px; align-items:center; flex-wrap:wrap; justify-content:flex-end; }
    .btn{
      border-radius: 999px;
      padding:10px 14px;
      border: 1px solid rgba(214,178,94,.45);
      background: rgba(0,0,0,.25);
      color: var(--text);
      cursor:pointer;
      box-shadow: 0 10px 30px rgba(0,0,0,.25);
      transition: transform .08s ease, background .15s ease;
      text-decoration:none;
      font-weight:600;
      font-size:13px;
      display:inline-flex; align-items:center; gap:8px;
      user-select:none;
    }
    .btn:hover{ transform: translateY(-1px); background: rgba(214,178,94,.08); }
    .btn.red{ border-color: rgba(225,29,46,.55); }
    .btn.green{ border-color: rgba(16,185,129,.55); }
    .btn.gold{ border-color: rgba(214,178,94,.65); }

    .wrap{ max-width:1100px; margin:0 auto; padding:22px 18px 60px; }

    .hero{
      border-radius: var(--radius);
      border: 1px solid rgba(214,178,94,.28);
      background: linear-gradient(135deg, rgba(225,29,46,.09), rgba(0,0,0,.35) 35%, rgba(16,185,129,.08));
      box-shadow: var(--shadow);
      padding: 18px;
    }
    .hero-grid{ display:grid; grid-template-columns: 1.2fr .8fr; gap:16px; }
    @media (max-width: 900px){ .hero-grid{ grid-template-columns:1fr; } }

    .title{
      margin:0;
      font-size: 22px;
      letter-spacing:.08em;
      text-transform:uppercase;
      background: linear-gradient(180deg, var(--gold2), var(--gold));
      -webkit-background-clip:text; background-clip:text; color:transparent;
    }
    .subtitle{ margin: 8px 0 0; color: var(--muted); line-height:1.5; font-size: 13.5px; }

    .panel{
      border-radius: var(--radius);
      border: 1px solid rgba(214,178,94,.20);
      background: var(--panel);
      padding: 16px;
      box-shadow: 0 14px 40px rgba(0,0,0,.35);
    }

    .kicker{ display:flex; gap:10px; align-items:center; flex-wrap:wrap; margin-top:14px; }
    .pill{
      padding:8px 12px;
      border-radius:999px;
      border: 1px solid rgba(214,178,94,.22);
      background: rgba(0,0,0,.25);
      color: var(--muted);
      font-size: 12px;
    }
    .pill b{ color: var(--text); font-weight:700; }

    .row{ display:grid; grid-template-columns: 1fr 1fr; gap:16px; margin-top: 16px; }
    @media (max-width: 900px){ .row{ grid-template-columns:1fr; } }

    .section-title{ margin:0 0 10px; font-size: 12px; letter-spacing:.18em; text-transform:uppercase; color: var(--muted); }

    .word{
      border-radius: 14px;
      border: 1px solid rgba(214,178,94,.18);
      background: rgba(0,0,0,.30);
      padding: 12px;
      display:flex; flex-direction:column; gap:8px;
    }
    .word-top{ display:flex; justify-content:space-between; gap:10px; align-items:baseline; flex-wrap:wrap; }
    .yo{
      font-weight:900;
      font-size: 18px;
      letter-spacing:.03em;
      background: linear-gradient(180deg, #fff3c4, var(--gold));
      -webkit-background-clip:text; background-clip:text; color:transparent;
    }
    .en{ color: var(--muted); font-size: 13px; }
    .mini{ color: var(--muted); font-size: 12px; line-height: 1.45; }

    .controls{ display:flex; gap:10px; flex-wrap:wrap; margin-top: 12px; }
    .status{ margin-top: 10px; font-size: 12px; color: var(--muted); }

    .footer{
      margin-top: 18px;
      color: rgba(201,194,179,.85);
      font-size: 12px;
      line-height: 1.5;
      border-top: 1px solid rgba(214,178,94,.16);
      padding-top: 14px;
    }

    .note{
      border-left: 3px solid rgba(214,178,94,.7);
      padding: 10px 12px;
      background: rgba(0,0,0,.25);
      border-radius: 12px;
      color: var(--muted);
      font-size: 12.5px;
      line-height: 1.55;
    }
    .danger{ border-left-color: rgba(225,29,46,.7); }

    code{ color: #fff3c4; }
    .small{ font-size:12px; color: var(--muted); margin-top:8px; }
    .divider{ height:10px; }
  </style>
</head>

<body>
  <div class="topbar">
    <div class="topbar-inner">
      <div class="brand">
        <div class="mark"><span>M</span></div>
        <div style="min-width:0">
          <h1>Mufasa ‚Ä¢ Yoruba Lesson</h1>
          <p id="todayLabel">Lesson of the Day ‚Ä¢ Loading‚Ä¶</p>
        </div>
      </div>

      <div class="nav">
        <!-- Use "/" if your site root is correct; use "../index.html" if yoruba.html lives inside /languages/ -->
        <a class="btn gold" href="/">‚Üê Back to Black History</a>
        <button class="btn green" id="btnSpeakAll" type="button">üîä Speak Lesson</button>
        <button class="btn red" id="btnStop" type="button">‚èπ Stop</button>
      </div>
    </div>
  </div>

  <div class="wrap">
    <div class="hero">
      <div class="hero-grid">
        <div class="panel">
          <h2 class="title" id="lessonTitle">Yor√πb√° Lesson of the Day</h2>
          <p class="subtitle" id="lessonSubtitle">
            Three words + 1 daily tip + 1 culture note. Practice out loud (AI voice + mic practice when supported).
          </p>

          <div class="kicker">
            <div class="pill"><b id="dayNum">Day</b></div>
            <div class="pill">Theme: <b id="theme">‚Äî</b></div>
            <div class="pill">Mode: <b id="mode">Text + AI Audio</b></div>
          </div>

          <div class="row" style="margin-top:16px">
            <div class="panel">
              <div class="section-title">Words</div>
              <div id="words"></div>

              <div class="controls">
                <button class="btn gold" id="btnPrev" type="button">‚Üê Prev</button>
                <button class="btn gold" id="btnNext" type="button">Next ‚Üí</button>
                <button class="btn green" id="btnMic" type="button">üéô Practice (Mic)</button>
              </div>

              <div class="status" id="status">Loading lesson data‚Ä¶</div>
              <div class="small" id="dataHint"></div>
            </div>

            <div class="panel">
              <div class="section-title">Daily Tip</div>
              <div class="note" id="tip">‚Äî</div>

              <div class="divider"></div>

              <div class="section-title">Culture Note</div>
              <div class="note" id="culture">‚Äî</div>

              <div class="footer">
                <div><b style="color:#fff3c4">How it works:</b> Tap <code>Speak Lesson</code> for AI voice. Tap <code>Practice (Mic)</code> to speak back. If your browser blocks mic/voice, you still get the full lesson by text.</div>
              </div>

              <div id="compat" class="note danger" style="display:none;margin-top:12px">
                Your browser doesn‚Äôt support Speech Recognition here. Use Chrome for best results.
              </div>
            </div>
          </div>
        </div>

        <div class="panel">
          <div class="section-title">Quick Practice Flow</div>
          <div class="note" id="practiceFlow">
            1) Listen to each word (üîä).<br/>
            2) Repeat it 3 times (üéô).<br/>
            3) Say the example sentences once.<br/><br/>
            <b>Goal:</b> consistency + confidence ‚Äî every day.
          </div>

          <div class="divider"></div>

          <div class="section-title">Today‚Äôs Sentence</div>
          <div class="note" id="sentenceBox">‚Äî</div>

          <div class="controls" style="margin-top:12px">
            <button class="btn green" id="btnSpeakSentence" type="button">üîä Speak Sentence</button>
          </div>
        </div>
      </div>
    </div>
  </div>

<script>
  // ==========================================================
  // ‚úÖ Yoruba Lesson Page (Static JSON + AI Voice Ready)
  //
  // IMPORTANT:
  // Put yoruba_30days.json in the SAME folder as yoruba.html
  // Example:
  // /languages/yoruba.html
  // /languages/yoruba_30days.json
  //
  // This page loads JSON via:
  //    fetch("./yoruba_30days.json")
  // which works on Render + GitHub Pages.
  // ==========================================================

  const DATA_URL = "./yoruba_30days.json";

  let PACK = null;
  let idx = 0;

  // ---------- Status ----------
  function setStatus(msg){
    document.getElementById("status").textContent = msg;
  }

  // ---------- Mic / Recognition ----------
  const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
  let rec = null;

  function initRec(){
    if(!SpeechRecognition){
      document.getElementById("compat").style.display = "block";
      document.getElementById("mode").textContent = "Text + AI Audio (no mic)";
      return;
    }
    rec = new SpeechRecognition();
    // Recognition for Yoruba is inconsistent across browsers; en-US often performs better for short phrases.
    // We keep Yoruba-ish, but fallback is okay.
    rec.lang = "en-US";
    rec.interimResults = false;
    rec.maxAlternatives = 1;

    rec.onresult = (e) => {
      const said = e.results?.[0]?.[0]?.transcript || "";
      setStatus("Heard: ‚Äú" + said + "‚Äù");
    };
    rec.onerror = (e) => setStatus("Mic error: " + (e.error || "unknown"));
    rec.onend = () => setStatus("Mic ready.");
  }

  // ---------- AI Voice (TTS) ----------
  // Uses browser speechSynthesis but selects the best available voice automatically.
  // If you later want your REAL AI voice (elevenlabs/openai/your server),
  // wire speakAI() to fetch audio and play it through aiTtsPlayer.
  function pickBestVoice(preferredLangs = ["yo", "en-US", "en"]){
    const voices = window.speechSynthesis?.getVoices?.() || [];
    if(!voices.length) return null;

    // Try Yoruba-ish
    for(const tag of preferredLangs){
      const v = voices.find(v => (v.lang || "").toLowerCase().startsWith(tag.toLowerCase()));
      if(v) return v;
    }

    // Otherwise, pick the first English-ish voice
    return voices.find(v => (v.lang || "").toLowerCase().startsWith("en")) || voices[0] || null;
  }

  let cachedVoice = null;
  function ensureVoice(){
    // voices can load async
    if(cachedVoice) return cachedVoice;
    cachedVoice = pickBestVoice();
    return cachedVoice;
  }

  function speakBrowser(text){
    try{
      window.speechSynthesis.cancel();
      const u = new SpeechSynthesisUtterance(text);
      u.rate = 0.95;
      u.pitch = 1.0;
      const v = ensureVoice();
      if(v) u.voice = v;
      window.speechSynthesis.speak(u);
    }catch(e){
      console.warn("TTS error", e);
    }
  }

  // Placeholder for future "real AI voice" endpoint.
  // If you build an endpoint that returns mp3 for text, switch speak() to call speakAI().
  async function speakAI(text){
    // Example (future):
    // const res = await fetch("/api/tts", { method:"POST", headers:{ "Content-Type":"application/json" }, body: JSON.stringify({ text, voice:"nani" })});
    // const blob = await res.blob();
    // const url = URL.createObjectURL(blob);
    // const p = document.getElementById("aiTtsPlayer");
    // p.src = url;
    // await p.play();
    speakBrowser(text);
  }

  function speak(text){
    speakAI(text);
  }

  // ---------- Helpers to support multiple JSON formats ----------
  // Your JSON may use keys like:
  // - "yoruba" vs "swahili"
  // - "pronunciation_hint" vs "pronunciation"
  // - "fact" vs "daily_tip"
  // - may not have "culture"
  function getWordText(w){
    return w.yoruba || w.word || w.swahili || "";
  }
  function getPron(w){
    return w.pronunciation_hint || w.pronunciation || w.pron || "‚Äî";
  }
  function getEnglish(w){
    return w.english || w.translation || "‚Äî";
  }
  function getExampleYo(w){
    return w.example_yoruba || w.example || w.sentence_yoruba || "";
  }
  function getExampleEn(w){
    return w.example_english || w.example_translation || "";
  }

  function getTip(d){
    return d.daily_tip || d.tip || d.fact || "‚Äî";
  }
  function getCulture(d){
    return d.culture || d.culture_note || d.note || "‚Äî";
  }
  function getTheme(d){
    return d.theme || d.topic || "Basics";
  }

  function buildSentence(d){
    // Prefer an explicit sentence field if you add it later; else use examples from word 1 or 2.
    const w2 = d.words?.[1];
    const w3 = d.words?.[2];
    const ex = getExampleYo(w3) || getExampleYo(w2) || getExampleYo(d.words?.[0] || {});
    return ex || "";
  }

  function render(){
    const d = PACK.days[idx];

    const theme = getTheme(d);
    const dayLabel = `Day ${d.day} ‚Ä¢ ${theme}`;

    document.getElementById("todayLabel").textContent = dayLabel;
    document.getElementById("lessonTitle").textContent = `Yor√πb√° Lesson ‚Ä¢ Day ${d.day}`;
    document.getElementById("dayNum").textContent = `Day ${d.day}/${PACK.duration_days || 30}`;
    document.getElementById("theme").textContent = theme;

    // Daily Tip + Culture Note
    document.getElementById("tip").textContent = getTip(d);
    document.getElementById("culture").textContent = getCulture(d);

    // Sentence
    const sentence = buildSentence(d);
    document.getElementById("sentenceBox").innerHTML = sentence
      ? `<b style="color:#fff3c4">${sentence}</b>`
      : "‚Äî";

    // Practice Flow (optional from JSON)
    if(d.practice?.repeat_rule){
      const pr = d.practice.repeat_rule;
      document.getElementById("practiceFlow").innerHTML =
        `1) Listen to each word (üîä).<br/>2) Repeat it 3 times (üéô).<br/>3) ${pr}<br/><br/><b>Goal:</b> consistency + confidence ‚Äî every day.`;
    }

    const wordsWrap = document.getElementById("words");
    wordsWrap.innerHTML = "";

    (d.words || []).forEach((w, i) => {
      const yo = getWordText(w);
      const en = getEnglish(w);
      const pron = getPron(w);
      const exYo = getExampleYo(w);
      const exEn = getExampleEn(w);

      const el = document.createElement("div");
      el.className = "word";

      el.innerHTML = `
        <div class="word-top">
          <div class="yo">${yo}</div>
          <div class="en">${en}</div>
        </div>
        <div class="mini">Pronunciation: <b style="color:#fff3c4">${pron}</b></div>
        ${exYo ? `<div class="mini">Example: <b style="color:#fff3c4">${exYo}</b> ${exEn ? `‚Äî ${exEn}` : ""}</div>` : ""}
        <div class="controls" style="margin:0">
          <button class="btn green" type="button" data-speak="${i}">üîä Speak</button>
          <button class="btn red" type="button" data-practice="${i}">üéô Practice</button>
        </div>
      `;

      wordsWrap.appendChild(el);
    });

    // Wire buttons inside word cards
    wordsWrap.querySelectorAll("[data-speak]").forEach(btn => {
      btn.addEventListener("click", () => {
        const w = d.words[Number(btn.getAttribute("data-speak"))];
        const yo = getWordText(w);
        const en = getEnglish(w);
        const pron = getPron(w);
        const exYo = getExampleYo(w);
        const exEn = getExampleEn(w);

        const parts = [];
        if(yo) parts.push(`${yo}.`);
        if(en) parts.push(`${en}.`);
        if(pron && pron !== "‚Äî") parts.push(`Pronunciation: ${pron}.`);
        if(exYo) parts.push(`Example: ${exYo}.`);
        if(exEn) parts.push(exEn);
        speak(parts.join(" "));
      });
    });

    wordsWrap.querySelectorAll("[data-practice]").forEach(btn => {
      btn.addEventListener("click", () => {
        if(!rec){ initRec(); }
        if(!rec){ return; }
        const w = d.words[Number(btn.getAttribute("data-practice"))];
        const yo = getWordText(w);
        setStatus(`Listening‚Ä¶ say "${yo}" three times.`);
        try{ rec.start(); } catch(e){}
      });
    });

    setStatus("Lesson loaded. Tap Speak Lesson or Practice (Mic).");
  }

  function speakAll(){
    const d = PACK.days[idx];
    const theme = getTheme(d);

    const parts = [];
    parts.push(`Yor√πb√° lesson, day ${d.day}. Theme: ${theme}.`);

    (d.words || []).forEach(w => {
      const yo = getWordText(w);
      const en = getEnglish(w);
      const pron = getPron(w);
      if(yo) parts.push(`${yo}.`);
      if(en) parts.push(`${en}.`);
      if(pron && pron !== "‚Äî") parts.push(`Pronunciation: ${pron}.`);
      const exYo = getExampleYo(w);
      const exEn = getExampleEn(w);
      if(exYo) parts.push(`Example: ${exYo}.`);
      if(exEn) parts.push(exEn);
    });

    const sentence = buildSentence(d);
    if(sentence) parts.push(`Sentence: ${sentence}.`);

    const tip = getTip(d);
    if(tip && tip !== "‚Äî") parts.push(`Daily tip: ${tip}.`);

    const culture = getCulture(d);
    if(culture && culture !== "‚Äî") parts.push(`Culture note: ${culture}.`);

    speak(parts.join(" "));
  }

  async function load(){
    try{
      document.getElementById("dataHint").textContent = `Loading: ${DATA_URL}`;
      const res = await fetch(DATA_URL, { cache: "no-store" });
      if(!res.ok) throw new Error("HTTP " + res.status);

      PACK = await res.json();

      // Decide today‚Äôs index:
      // - Uses day-of-month so it changes daily without needing storage.
      // - Still allows Prev/Next for navigation.
      const total = PACK.days?.length || 30;
      const day = new Date().getDate(); // 1..31
      idx = Math.min((day - 1) % total, total - 1);

      render();

      // Voice list loads async on some browsers
      if("speechSynthesis" in window){
        window.speechSynthesis.onvoiceschanged = () => { cachedVoice = null; ensureVoice(); };
        ensureVoice();
      }

      initRec();
    }catch(e){
      console.error(e);
      setStatus("Could not load yoruba_30days.json. Put it in the SAME folder as yoruba.html.");
      document.getElementById("dataHint").textContent =
        `Expected file at: ${new URL(DATA_URL, window.location.href).toString()}`;
    }
  }

  // ---------- Top controls ----------
  document.getElementById("btnSpeakAll").addEventListener("click", speakAll);

  document.getElementById("btnStop").addEventListener("click", () => {
    try{ window.speechSynthesis.cancel(); }catch(e){}
    if(rec){ try{ rec.abort(); }catch(e){} }
    setStatus("Stopped.");
  });

  document.getElementById("btnPrev").addEventListener("click", () => {
    if(!PACK) return;
    idx = (idx - 1 + PACK.days.length) % PACK.days.length;
    render();
  });

  document.getElementById("btnNext").addEventListener("click", () => {
    if(!PACK) return;
    idx = (idx + 1) % PACK.days.length;
    render();
  });

  document.getElementById("btnMic").addEventListener("click", () => {
    if(!rec){ initRec(); }
    if(!rec){ return; }
    const d = PACK.days[idx];
    const sentence = buildSentence(d);
    setStatus("Listening‚Ä¶ say today‚Äôs sentence once.");
    try{ rec.start(); } catch(e){}
    // (Optional) You could compare what they said to the sentence; keeping it simple for now.
  });

  document.getElementById("btnSpeakSentence").addEventListener("click", () => {
    if(!PACK) return;
    const d = PACK.days[idx];
    const sentence = buildSentence(d);
    if(sentence) speak(sentence);
  });

  load();
</script>

<!-- AI Voice Player (keep this for when you switch to real AI TTS mp3) -->
<audio id="aiTtsPlayer" preload="auto"></audio>

</body>
</html>
